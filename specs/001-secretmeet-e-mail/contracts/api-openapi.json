{
  "openapi": "3.0.0",
  "info": {
    "title": "SecretMeet API",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nickname": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "One-time password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nickname": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/categories": {
      "get": {
        "summary": "Get all categories",
        "responses": {
          "200": {
            "description": "A list of categories"
          }
        }
      }
    },
    "/themes/{category}": {
      "get": {
        "summary": "Get theme for a category",
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Theme assets"
          }
        }
      }
    },
    "/chats": {
      "get": {
        "summary": "Get a list of chats with filters",
        "responses": {
          "200": {
            "description": "A list of chats"
          }
        }
      },
      "post": {
        "summary": "Create a new chat",
        "responses": {
          "201": {
            "description": "Chat created"
          }
        }
      }
    },
    "/chats/{id}": {
      "get": {
        "summary": "Get a single chat",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat details"
          }
        }
      }
    },
    "/chats/{id}/pin": {
      "post": {
        "summary": "Pin a message in a chat (moderator only)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Message pinned"
          }
        }
      }
    },
    "/chats/{id}/kick": {
      "post": {
        "summary": "Kick a user from a chat (moderator only)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User kicked"
          }
        }
      }
    }
  }
}
